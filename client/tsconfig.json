{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./built",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ES2020",

    "jsx": "preserve",
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "skipLibCheck": true,
    "module": "esnext",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"]
}
